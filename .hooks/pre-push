#!/usr/bin/env bash

branch=$(git rev-parse --symbolic --abbrev-ref HEAD)

if [ "master" == "$branch" ]; then
    git checkout gh-pages --quiet
    git rm -r * --quiet
    git checkout master -- client/*
    git mv client/* .
    rmdir client
    git add -A
    git commit -m "updated"
    git push --quiet
    echo Website deployed.
    git checkout master --quiet
fi


